<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:Tracked.Controls"
    x:Class="Tracked.Screens.Record.RecordScreen"
    Title="{Binding Title}">
    <ContentPage.ToolbarItems>
        <ToolbarItem
            Text="Settings"
            Order="Primary"
            Clicked="Settings_Tapped" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <Grid
            RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="30" />
                <RowDefinition
                    Height="30" />
                <RowDefinition
                    Height="*" />
                <RowDefinition
                    Height="*" />
            </Grid.RowDefinitions>

            <Label
                HorizontalTextAlignment="Center"
                VerticalTextAlignment="Center"
                TextColor="White"
                BackgroundColor="{Binding HasAcquiredGpsSignal, Converter={StaticResource BoolToGpsColourConverter}}"
                Text="{Binding GpsSignalMessage}"
                IsVisible="{Binding ShowNotifications}" />

            <Label
                Grid.Row="1"
                HorizontalTextAlignment="Center"
                VerticalTextAlignment="Center"
                TextColor="White"
                IsVisible="{Binding ShowNotifications}"
                BackgroundColor="{Binding ShouldDetectJumps, Converter={StaticResource AccelerometerToColourConverter}}"
                Text="{Binding AccelerometerNotification}" />

            <Label
                Grid.Row="2"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                FontSize="50"
                Padding="5"
                Text="{Binding TimerDisplay}" />

            <Button
                Grid.Row="3"
                Text="Start"
                FontSize="Large"
                Clicked="Start_Clicked"
                IsVisible="{Binding CanStart}"
                BackgroundColor="Green"
                TextColor="White"
                WidthRequest="120"
                HeightRequest="120"
                CornerRadius="60"
                VerticalOptions="Center"
                HorizontalOptions="Center" />

            <Button
                Grid.Row="3"
                Text="Stop"
                FontSize="Large"
                Clicked="Stop_Clicked"
                IsVisible="{Binding CanStop}"
                BackgroundColor="Orange"
                TextColor="White"
                WidthRequest="120"
                HeightRequest="120"
                CornerRadius="60"
                VerticalOptions="Center"
                HorizontalOptions="Center" />
        </Grid>
    </ContentPage.Content>
</ContentPage>