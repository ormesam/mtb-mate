<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Tracked.Screens.Settings.SettingsScreen"
    Title="{Binding Title}">
    <ContentPage.Content>
        <StackLayout
            Spacing="0">
            <TableView
                Intent="Settings">
                <TableSection
                    Title="Settings">
                    <SwitchCell
                        Text="Detect Jumps?"
                        On="{Binding ShouldDetectJumps}" />
                </TableSection>
            </TableView>
            <StackLayout
                HorizontalOptions="Center"
                Orientation="Horizontal"
                Padding="10">
                <Image
                    Source="github.png"
                    VerticalOptions="Center"
                    WidthRequest="30"/>
                <Label
                    Text="Open source project by Sam Orme"
                    VerticalOptions="Center"/>
            </StackLayout>
            <Button
                Text="Log Out"
                Clicked="DisconnectFromGoogle_Click"
                BackgroundColor="{StaticResource GoogleButtonColour}"
                TextColor="White" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>