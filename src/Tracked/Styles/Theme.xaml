<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Tracked.Styles.Theme">
    <!-- Colours -->
    <Color
        x:Key="BackgroundColour">
        #06090F
    </Color>
    <Color
        x:Key="SecondaryBackgroundColour">
        #0D1117
    </Color>
    <Color
        x:Key="OutlineColour">
        #30363D
    </Color>
    <Color
        x:Key="TextColour">
        #f5f5f5
    </Color>
    <Color
        x:Key="Green">
        Lime
    </Color>

    <!-- Default Styles -->
    <Style
        TargetType="Label">
        <Setter
            Property="TextColor"
            Value="{StaticResource TextColour}" />
    </Style>
    <Style
        TargetType="NavigationPage">
        <Setter
            Property="BackgroundColor"
            Value="{StaticResource BackgroundColour}" />
        <Setter
            Property="BarBackgroundColor"
            Value="{StaticResource BackgroundColour}" />
    </Style>

</ResourceDictionary>